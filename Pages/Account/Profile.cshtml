@page
@model MyWebApp.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="min-h-[calc(100vh-4rem)] relative py-12 sm:py-16 px-4 sm:px-6 lg:px-8">
    <!-- Pattern Background -->
    <div class="absolute inset-0 bg-slate-50 dark:bg-slate-900">
        <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] dark:bg-[radial-gradient(#1e293b_1px,transparent_1px)]"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-slate-100/50 dark:to-slate-800/50"></div>
    </div>

    <div class="relative max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12 sm:mb-16">
            <h1 class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-[#238636] to-[#2ea043] dark:from-[#3fb950] dark:to-[#7ee787] text-transparent bg-clip-text">
                ویرایش پروفایل
            </h1>
            <p class="mt-3 sm:mt-4 text-sm text-slate-600 dark:text-slate-400">
                اطلاعات شخصی خود را در اینجا ویرایش کنید
            </p>
        </div>

        <div class="relative max-w-4xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 sm:gap-8">
                <div class="lg:col-span-12">
                    <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-xl rounded-2xl shadow-xl p-6 sm:p-8 border border-slate-200/50 dark:border-slate-700/50">
                        @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
                        {
                            var isSuccess = Model.AlertType;
                            <div class="mb-6 p-4 rounded-xl @(isSuccess ? "bg-green-50 dark:bg-green-900/20 border border-green-100 dark:border-green-800/50" : "bg-red-50 dark:bg-red-900/20 border border-red-100 dark:border-red-800/50")">
                                <div class="flex items-center">
                                    <i class="@(isSuccess ? "fas fa-check-circle text-green-600 dark:text-green-400" : "fas fa-exclamation-circle text-red-600 dark:text-red-400") ml-2"></i>
                                    <p class="@(isSuccess ? "text-green-800 dark:text-green-300" : "text-red-800 dark:text-red-300")">
                                        @Html.Raw(Model.StatusMessage)
                                    </p>
                                </div>
                            </div>
                        }
                        <form method="post" class="space-y-6 sm:space-y-8">
                            <div asp-validation-summary="ModelOnly" class="text-red-600 dark:text-red-400 text-sm mb-6 sm:mb-8"></div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8">
                                <!-- Username -->
                                <div class="group">
                                    <label asp-for="Input.Username" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 sm:mb-3 group-focus-within:text-[#238636] dark:group-focus-within:text-[#3fb950] transition-colors duration-200"></label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none text-slate-400 group-focus-within:text-[#238636] dark:group-focus-within:text-[#3fb950] transition-colors duration-200">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <input asp-for="Input.Username" 
                                            class="block w-full pr-12 pl-4 py-3 sm:py-3.5 rounded-xl border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white shadow-sm focus:ring-2 focus:ring-[#238636] dark:focus:ring-[#3fb950] focus:border-[#238636] dark:focus:border-[#3fb950] transition-all duration-200 placeholder:text-slate-400 dark:placeholder:text-slate-500" 
                                            placeholder="نام کاربری خود را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="Input.Username" class="text-red-600 dark:text-red-400 text-sm mt-1 sm:mt-2"></span>
                                </div>

                                <!-- Email (Read-only) -->
                                <div class="group">
                                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 sm:mb-3">ایمیل</label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none text-slate-400">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <input value="@Model.UserData?.Email" 
                                            disabled 
                                            class="block w-full pr-12 pl-4 py-3 sm:py-3.5 rounded-xl border-slate-300 dark:border-slate-600 bg-slate-100 dark:bg-slate-700/50 text-slate-500 dark:text-slate-400 cursor-not-allowed" />
                                    </div>
                                    <!-- <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">ایمیل قابل تغییر نیست</p> -->
                                </div>

                                <!-- First Name -->
                                <div class="group">
                                    <label asp-for="Input.FirstName" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 sm:mb-3 group-focus-within:text-[#238636] dark:group-focus-within:text-[#3fb950] transition-colors duration-200"></label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none text-slate-400 group-focus-within:text-[#238636] dark:group-focus-within:text-[#3fb950] transition-colors duration-200">
                                            <i class="fas fa-user-tag"></i>
                                        </div>
                                        <input asp-for="Input.FirstName" 
                                            class="block w-full pr-12 pl-4 py-3 sm:py-3.5 rounded-xl border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white shadow-sm focus:ring-2 focus:ring-[#238636] dark:focus:ring-[#3fb950] focus:border-[#238636] dark:focus:border-[#3fb950] transition-all duration-200 placeholder:text-slate-400 dark:placeholder:text-slate-500" 
                                            placeholder="نام خود را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="Input.FirstName" class="text-red-600 dark:text-red-400 text-sm mt-1 sm:mt-2"></span>
                                </div>

                                <!-- Last Name -->
                                <div class="group">
                                    <label asp-for="Input.LastName" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2 sm:mb-3 group-focus-within:text-[#238636] dark:group-focus-within:text-[#3fb950] transition-colors duration-200"></label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none text-slate-400 group-focus-within:text-[#238636] dark:group-focus-within:text-[#3fb950] transition-colors duration-200">
                                            <i class="fas fa-user-tag"></i>
                                        </div>
                                        <input asp-for="Input.LastName" 
                                            class="block w-full pr-12 pl-4 py-3 sm:py-3.5 rounded-xl border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white shadow-sm focus:ring-2 focus:ring-[#238636] dark:focus:ring-[#3fb950] focus:border-[#238636] dark:focus:border-[#3fb950] transition-all duration-200 placeholder:text-slate-400 dark:placeholder:text-slate-500" 
                                            placeholder="نام خانوادگی خود را وارد کنید" />
                                    </div>
                                    <span asp-validation-for="Input.LastName" class="text-red-600 dark:text-red-400 text-sm mt-1 sm:mt-2"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="flex flex-col sm:flex-row items-center justify-between gap-4 sm:gap-0 pt-6 sm:pt-8">
                                <button type="submit" class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-3 border border-transparent rounded-xl text-sm font-medium text-white bg-[#238636] dark:bg-[#3fb950] hover:bg-[#2ea043] dark:hover:bg-[#7ee787] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#238636] dark:focus:ring-[#3fb950] transition-all duration-200">
                                    <i class="fas fa-save ml-2"></i>
                                    ذخیره تغییرات
                                </button>
                                <a href="/Account" class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 border border-slate-300 dark:border-slate-600 rounded-xl text-sm font-medium text-slate-700 dark:text-slate-300 bg-white dark:bg-slate-700 hover:bg-slate-50 dark:hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#238636] dark:focus:ring-[#3fb950] transition-all duration-200">
                                    <i class="fas fa-arrow-right ml-2"></i>
                                    بازگشت به داشبورد
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
