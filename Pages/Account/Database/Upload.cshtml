@page
@model MyWebApp.Pages.Account.Database.UploadModel
@{
    ViewData["Title"] = "Upload | Database";
}

<div class="min-h-[calc(100vh-4rem)] relative py-12 px-4 sm:px-6 lg:px-8">
    <!-- Pattern Background -->
    <div class="absolute inset-0 bg-slate-50 dark:bg-slate-900">
        <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] dark:bg-[radial-gradient(#1e293b_1px,transparent_1px)]"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-slate-100/50 dark:to-slate-800/50"></div>
    </div>

    <div class="relative max-w-2xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold bg-gradient-to-r from-[#238636] to-[#2ea043] dark:from-[#3fb950] dark:to-[#7ee787] text-transparent bg-clip-text">
                آپلود دیتابیس
            </h1>
            <p class="mt-3 text-sm text-slate-600 dark:text-slate-400">
                فایل دیتابیس جدید را برای جایگزینی انتخاب کنید
            </p>
        </div>

        <!-- Upload Card -->
        <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-xl rounded-2xl shadow-xl p-6 border border-slate-200/50 dark:border-slate-700/50">
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="mb-6 p-4 rounded-xl @(Model.AlertClass == "alert-success" ? "bg-green-50/50 dark:bg-green-900/20 border border-green-100 dark:border-green-800/50" : "bg-red-50/50 dark:bg-red-900/20 border border-red-100 dark:border-red-800/50")">
                    <div class="flex items-center">
                        <i class="@(Model.AlertClass == "alert-success" ? "fas fa-check-circle text-green-600 dark:text-green-400" : "fas fa-exclamation-circle text-red-600 dark:text-red-400") ml-2"></i>
                        <p class="@(Model.AlertClass == "alert-success" ? "text-green-800 dark:text-green-300" : "text-red-800 dark:text-red-300")">
                            @Model.Message
                        </p>
                    </div>
                </div>
            }
            <!-- Info Box -->
            <div class="mb-6 p-4 rounded-xl bg-blue-50/50 dark:bg-blue-900/20 border border-blue-100 dark:border-blue-800/50">
                <div class="flex items-center mb-3">
                    <i class="fas fa-info-circle text-blue-600 dark:text-blue-400 ml-2"></i>
                    <h3 class="font-medium text-blue-900 dark:text-blue-300">نکات مهم</h3>
                </div>
                <ul class="space-y-2 text-sm text-blue-800 dark:text-blue-300">
                    <li class="flex items-center">
                        <i class="fas fa-check-circle text-blue-600 dark:text-blue-400 ml-2"></i>
                        حداکثر حجم مجاز: 10 مگابایت
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check-circle text-blue-600 dark:text-blue-400 ml-2"></i>
                        فقط فایل‌های .db پذیرفته می‌شوند
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check-circle text-blue-600 dark:text-blue-400 ml-2"></i>
                        قبل از جایگزینی، نسخه پشتیبان ایجاد می‌شود
                    </li>
                </ul>
            </div>

            <!-- Upload Form -->
            <form method="post" enctype="multipart/form-data" class="space-y-6">
                <div class="relative group">
                    <input type="file" 
                           asp-for="DatabaseFile" 
                           accept=".db"
                           class="hidden" 
                           required 
                           id="database-file" />
                    <label for="database-file" 
                           class="flex flex-col items-center justify-center p-6 border-2 border-dashed border-slate-300 dark:border-slate-600 rounded-xl cursor-pointer group-hover:border-blue-500 dark:group-hover:border-blue-400 transition-colors">
                        <div class="w-16 h-16 mb-4 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center group-hover:scale-110 transition-transform">
                            <i class="fas fa-cloud-upload-alt text-2xl text-blue-600 dark:text-blue-400"></i>
                        </div>
                        <p class="text-slate-600 dark:text-slate-400 text-center">
                            <span class="font-medium text-blue-600 dark:text-blue-400">انتخاب فایل</span> یا فایل را اینجا رها کنید
                        </p>
                        <p class="mt-2 text-sm text-slate-500 dark:text-slate-500">SQLite Database (*.db)</p>
                    </label>
                </div>

                <!-- Buttons -->
                <div class="flex flex-col-reverse sm:flex-row items-center gap-4 sm:gap-4">
                    <a href="/Account" 
                       class="w-full inline-flex items-center justify-center px-6 py-3 border border-slate-300 dark:border-slate-600 rounded-xl text-sm font-medium text-slate-700 dark:text-slate-300 bg-white dark:bg-slate-700 hover:bg-slate-50 dark:hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#238636] dark:focus:ring-[#3fb950] transition-all duration-200">
                        <i class="fas fa-arrow-right ml-2"></i>
                        بازگشت
                    </a>
                    <button type="submit" 
                            class="w-full inline-flex items-center justify-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl transition-colors">
                        <i class="fas fa-upload ml-2"></i>
                        آپلود دیتابیس
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
