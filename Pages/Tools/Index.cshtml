@page "/tools"
@model MyWebApp.Pages.Tools.IndexModel
@{
    Layout = "_ToolsLayout";
    ViewData["Title"] = "Tools";
    ViewData["ToolName"] = "لیست";
    ViewData["ToolDescription"] = "مجموعه ابزارهای کاربردی برای تسهیل کارهای روزمره";
    ViewData["ToolIcon"] = "fas fa-toolbox";
}

<div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Grade Calculator Tool -->
        <a href="/tools/grade-calculator" class="group">
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg overflow-hidden transition-transform duration-300 group-hover:-translate-y-1">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="bg-blue-500/10 dark:bg-blue-500/20 p-3 rounded-xl">
                            <i class="fas fa-calculator text-2xl text-blue-500"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-slate-900 dark:text-white">محاسبه نمره</h3>
                            <p class="text-slate-600 dark:text-slate-400 text-sm">محاسبه رتبه دانش‌آموز بر اساس نمره</p>
                        </div>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-slate-600 dark:text-slate-400">
                            <i class="fas fa-clock ml-1"></i>
                            زمان تخمینی: ۱ دقیقه
                        </span>
                        <span class="text-blue-500 group-hover:translate-x-2 transition-transform duration-300">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                    </div>
                </div>
            </div>
        </a>

        <!-- Coming Soon Tools -->
        <div class="opacity-60 cursor-not-allowed">
            <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="bg-slate-500/10 dark:bg-slate-500/20 p-3 rounded-xl">
                            <i class="fas fa-clock text-2xl text-slate-500"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-slate-900 dark:text-white">به زودی</h3>
                            <p class="text-slate-600 dark:text-slate-400 text-sm">ابزارهای بیشتر در راه هستند...</p>
                        </div>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-slate-600 dark:text-slate-400">
                            <i class="fas fa-hourglass ml-1"></i>
                            در حال توسعه
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 