@page
@model IndexModel
@{
    ViewData["Title"] = "Portfolio";
}

<div class="relative min-h-screen bg-[#ffffff] dark:bg-[#0d1117]">
    <!-- Hero Section -->
    <div id="home" class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-green-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
        <!-- Background Pattern با تغییر opacity -->
        <div class="absolute inset-0 dark:opacity-10 opacity-20">
            <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                <defs>
                    <pattern id="grid" width="8" height="8" patternUnits="userSpaceOnUse">
                        <path d="M0 8L8 0M-1 1L1 -1M7 9L9 7" stroke="currentColor" stroke-width="0.5"/>
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#grid)"/>
            </svg>
        </div>

        <!-- Animated Background Shapes -->
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute -top-1/2 -right-1/2 w-full h-full rounded-full bg-gradient-to-b from-[#238636]/10 to-transparent dark:from-[#238636]/20 animate-pulse"></div>
            <div class="absolute -bottom-1/2 -left-1/2 w-full h-full rounded-full bg-gradient-to-t from-blue-500/10 to-transparent dark:from-blue-500/20 animate-pulse delay-1000"></div>
        </div>

        <!-- Glass Effect Overlay -->
        <div class="absolute inset-0 backdrop-blur-[100px]"></div>

        <!-- Content -->
        <div class="relative container mx-auto px-4 pt-32 pb-20">
            <div class="flex flex-col lg:flex-row items-center justify-between gap-12">
                <div class="lg:w-1/2 text-center lg:text-right" data-aos="fade-up">
                    <span class="inline-block px-4 py-2 rounded-2xl bg-[#238636] bg-opacity-10 dark:bg-opacity-20 text-[#238636] dark:text-[#7ee787] text-sm font-medium mb-4">
                        توسعه‌دهنده Full-Stack
                    </span>
                    <h1 class="text-5xl lg:text-6xl font-bold mb-6 text-[#24292f] dark:text-[#c9d1d9]">
                        توسعه‌دهنده خلاق و
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#238636] to-[#2ea043] dark:from-[#3fb950] dark:to-[#7ee787]">
                            حرفه‌ای
                        </span>
                    </h1>
                    <p class="text-[#57606a] dark:text-[#8b949e] text-lg mb-12">
                        متخصص در طراحی و توسعه وب‌سایت‌های مدرن و اپلیکیشن‌های موبایل
                    </p>
                    <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start">
                        <a href="#contact" 
                           class="group relative px-8 py-4 bg-[#238636] hover:bg-[#2ea043] dark:bg-[#238636] dark:hover:bg-[#2ea043] text-white rounded-2xl transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl hover:shadow-[#238636]/20 dark:hover:shadow-[#238636]/30 overflow-hidden">
                            <span class="relative z-10 text-lg font-medium">تماس با من</span>
                            <div class="absolute inset-0 -translate-y-full group-hover:translate-y-0 bg-gradient-to-b from-white/10 to-transparent transition-transform duration-300"></div>
                        </a>
                        <a href="#projects" 
                           class="group relative px-8 py-4 border-2 border-[#238636] dark:border-[#238636] text-[#238636] dark:text-[#7ee787] rounded-2xl transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl hover:shadow-[#238636]/10 dark:hover:shadow-[#238636]/20 overflow-hidden">
                            <span class="relative z-10 text-lg font-medium">نمونه کارها</span>
                            <div class="absolute inset-0 translate-y-full group-hover:translate-y-0 bg-[#238636]/10 dark:bg-[#238636]/20 transition-transform duration-300"></div>
                        </a>
                    </div>
                </div>
                <div class="lg:w-1/2 relative" data-aos="fade-left">
                    <div class="relative z-10">
                        <img src="https://images.unsplash.com/photo-1568602471122-7832951cc4c5?q=80&w=800&auto=format&fit=crop"
                             alt="Profile" 
                             class="rounded-3xl shadow-2xl w-full max-w-md mx-auto ring-1 ring-[#d0d7de] dark:ring-[#30363d]">
                        <!-- Decorative Elements -->
                        <div class="absolute -top-4 -right-4 w-full h-full rounded-3xl -z-10 
                                  bg-gradient-to-r from-[#238636] to-[#2ea043] dark:from-[#3fb950] dark:to-[#7ee787] 
                                  opacity-20 dark:opacity-30">
                        </div>
                        <div class="absolute -bottom-4 -left-4 w-full h-full rounded-3xl -z-10 
                                  bg-gradient-to-l from-[#238636] to-[#2ea043] dark:from-[#3fb950] dark:to-[#7ee787] 
                                  opacity-20 dark:opacity-30">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Projects Section -->
    <section id="projects" class="py-20 bg-white dark:bg-slate-900">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">پروژه‌های من</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Project Card 1 -->
                <div class="group relative overflow-hidden rounded-3xl shadow-lg" data-aos="fade-up" data-aos-delay="100">
                    <div class="relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1555949963-aa79dcee981c?q=80&w=800&auto=format&fit=crop" 
                             alt="AI Project" 
                             class="w-full h-64 object-cover transform group-hover:scale-110 transition duration-500">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <div class="absolute bottom-0 p-6">
                                <h3 class="text-xl font-bold text-white mb-2">پروژه هوش مصنوعی</h3>
                                <p class="text-gray-200 mb-4">سیستم پردازش تصویر با یادگیری عمیق</p>
                                <div class="flex gap-4 flex-wrap">
                                    <span class="px-4 py-2 bg-blue-500/20 text-blue-100 rounded-xl text-sm">Python</span>
                                    <span class="px-4 py-2 bg-green-500/20 text-green-100 rounded-xl text-sm">TensorFlow</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Project Card 2 -->
                <div class="group relative overflow-hidden rounded-3xl shadow-lg" data-aos="fade-up" data-aos-delay="200">
                    <div class="relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=80&w=800&auto=format&fit=crop" 
                             alt="Financial App" 
                             class="w-full h-64 object-cover transform group-hover:scale-110 transition duration-500">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <div class="absolute bottom-0 p-6">
                                <h3 class="text-xl font-bold text-white mb-2">اپلیکیشن مدیریت مالی</h3>
                                <p class="text-gray-200 mb-4">پلتفرم مدیریت امور مالی شخصی</p>
                                <div class="flex gap-4 flex-wrap">
                                    <span class="px-4 py-2 bg-purple-500/20 text-purple-100 rounded-xl text-sm">React</span>
                                    <span class="px-4 py-2 bg-orange-500/20 text-orange-100 rounded-xl text-sm">Firebase</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Project Card 3 -->
                <div class="group relative overflow-hidden rounded-3xl shadow-lg" data-aos="fade-up" data-aos-delay="300">
                    <div class="relative overflow-hidden">
                        <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?q=80&w=800&auto=format&fit=crop" 
                             alt="Learning Platform" 
                             class="w-full h-64 object-cover transform group-hover:scale-110 transition duration-500">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <div class="absolute bottom-0 p-6">
                                <h3 class="text-xl font-bold text-white mb-2">پلتفرم آموزشی</h3>
                                <p class="text-gray-200 mb-4">سیستم مدیریت یادگیری آنلاین</p>
                                <div class="flex gap-4 flex-wrap">
                                    <span class="px-4 py-2 bg-blue-500/20 text-blue-100 rounded-xl text-sm">.NET</span>
                                    <span class="px-4 py-2 bg-yellow-500/20 text-yellow-100 rounded-xl text-sm">Vue.js</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="py-20 bg-gray-50 dark:bg-slate-800">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">مهارت‌های من</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                <!-- Frontend -->
                <div class="p-6 bg-white dark:bg-slate-700 rounded-3xl shadow-lg hover:shadow-xl transition-shadow duration-300" data-aos="zoom-in" data-aos-delay="100">
                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900/20 rounded-2xl flex items-center justify-center">
                            <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg" 
                                 class="w-8 h-8" alt="React Icon">
                        </div>
                        <h3 class="text-lg font-semibold mb-2">Frontend</h3>
                        <div class="w-full bg-gray-200 dark:bg-slate-600/30 rounded-xl h-2">
                            <div class="bg-[#58a6ff] dark:bg-[#1f6feb] h-2 rounded-xl" style="width: 90%"></div>
                        </div>
                    </div>
                </div>

                <!-- Backend -->
                <div class="p-6 bg-white dark:bg-slate-700 rounded-3xl shadow-lg hover:shadow-xl transition-shadow duration-300" data-aos="zoom-in" data-aos-delay="200">
                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto mb-4 bg-green-100 dark:bg-green-900/20 rounded-2xl flex items-center justify-center">
                            <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nodejs/nodejs-original.svg" 
                                 class="w-8 h-8" alt="Node.js Icon">
                        </div>
                        <h3 class="text-lg font-semibold mb-2">Backend</h3>
                        <div class="w-full bg-gray-200 dark:bg-slate-600/30 rounded-xl h-2">
                            <div class="bg-[#3fb950] dark:bg-[#238636] h-2 rounded-xl" style="width: 85%"></div>
                        </div>
                    </div>
                </div>

                <!-- Mobile -->
                <div class="p-6 bg-white dark:bg-slate-700 rounded-3xl shadow-lg hover:shadow-xl transition-shadow duration-300" data-aos="zoom-in" data-aos-delay="300">
                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto mb-4 bg-purple-100 dark:bg-purple-900/20 rounded-2xl flex items-center justify-center">
                            <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/flutter/flutter-original.svg" 
                                 class="w-8 h-8" alt="Flutter Icon">
                        </div>
                        <h3 class="text-lg font-semibold mb-2">Mobile</h3>
                        <div class="w-full bg-gray-200 dark:bg-slate-600/30 rounded-xl h-2">
                            <div class="bg-[#8957e5] dark:bg-[#6b4bb5] h-2 rounded-xl" style="width: 80%"></div>
                        </div>
                    </div>
                </div>

                <!-- UI/UX -->
                <div class="p-6 bg-white dark:bg-slate-700 rounded-3xl shadow-lg hover:shadow-xl transition-shadow duration-300" data-aos="zoom-in" data-aos-delay="400">
                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto mb-4 bg-orange-100 dark:bg-orange-900/20 rounded-2xl flex items-center justify-center">
                            <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/figma/figma-original.svg" 
                                 class="w-8 h-8" alt="Figma Icon">
                        </div>
                        <h3 class="text-lg font-semibold mb-2">UI/UX</h3>
                        <div class="w-full bg-gray-200 dark:bg-slate-600/30 rounded-xl h-2">
                            <div class="bg-[#f85149] dark:bg-[#da3633] h-2 rounded-xl" style="width: 75%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
