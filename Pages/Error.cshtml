@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mx-auto px-4">
    <div class="min-h-screen py-10 flex items-center justify-center">
        <div class="w-full max-w-2xl bg-white dark:bg-slate-800 rounded-2xl shadow-lg overflow-hidden">
            <!-- Header Section -->
            <div class="bg-gradient-to-r from-red-500 to-red-600 dark:from-red-600 dark:to-red-700 p-6 text-center">
                <div class="bg-white/20 dark:bg-white/10 w-20 h-20 rounded-full mx-auto flex items-center justify-center mb-4">
                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-white mb-2">خطایی رخ داد</h1>
                <p class="text-white/80">متأسفانه در پردازش درخواست شما خطایی رخ داده است</p>
            </div>

            <!-- Content Section -->
            <div class="p-6 space-y-6">
                @if (Model.ShowRequestId)
                {
                    <div class="flex items-center justify-center gap-3 p-3 bg-slate-50 dark:bg-slate-700/50 rounded-lg">
                        <span class="text-slate-600 dark:text-slate-300">شناسه درخواست:</span>
                        <code class="px-3 py-1 bg-slate-200 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-md text-sm font-mono">
                            @Model.RequestId
                        </code>
                    </div>
                }

                <!-- Development Info -->
                <div class="space-y-4 text-right">
                    <div class="border-r-4 border-blue-500 bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
                        <h3 class="text-lg font-semibold text-blue-700 dark:text-blue-400 mb-2">
                            حالت توسعه
                        </h3>
                        <p class="text-slate-600 dark:text-slate-400">
                            تغییر به محیط <span class="font-semibold">Development</span> اطلاعات دقیق‌تری درباره خطای رخ داده نمایش می‌دهد.
                        </p>
                    </div>

                    <div class="border-r-4 border-yellow-500 bg-yellow-50 dark:bg-yellow-900/20 p-4 rounded-lg">
                        <p class="text-yellow-800 dark:text-yellow-200 font-medium">
                            محیط Development نباید در برنامه‌های منتشر شده فعال باشد. این می‌تواند منجر به نمایش اطلاعات حساس از خطاها به کاربران نهایی شود.
                        </p>
                    </div>

                    <div class="bg-slate-50 dark:bg-slate-700/50 p-4 rounded-lg">
                        <p class="text-slate-600 dark:text-slate-400">
                            برای دیباگ محلی، محیط <strong>Development</strong> را با تنظیم متغیر محیطی 
                            <code class="inline-block px-2 py-1 mx-1 bg-slate-200 dark:bg-slate-700 rounded text-sm font-mono">
                                ASPNETCORE_ENVIRONMENT
                            </code> 
                            به مقدار 
                            <code class="inline-block px-2 py-1 mx-1 bg-slate-200 dark:bg-slate-700 rounded text-sm font-mono">
                                Development
                            </code> 
                            فعال کنید و برنامه را مجدداً راه‌اندازی نمایید.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Footer Section -->
            <div class="border-t border-slate-200 dark:border-slate-700 p-6 flex justify-center">
                <a href="/" class="group relative inline-flex items-center justify-center overflow-hidden rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 p-0.5 font-bold text-white hover:text-white focus:outline-none focus:ring-4 focus:ring-blue-300 group-hover:from-blue-500 group-hover:to-blue-600 dark:focus:ring-blue-800">
                    <span class="relative rounded-md bg-blue-500 px-5 py-2.5 transition-all duration-75 ease-in group-hover:bg-opacity-0">
                        بازگشت به صفحه اصلی
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>
